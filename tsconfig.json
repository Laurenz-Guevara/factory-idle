{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@src/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@classes/*": [
        "./classes/*"
      ],
      "@context/*": [
        "./context/*"
      ],
    },
  }
}
